<script type="text/javascript">
    $(function(){
        var currentQuestion = 1;
        var questionItems = {
            '1' : {
                title : "1、您家宝贝是男孩还是女孩？",
                answer : ["男孩", "女孩"]
            },
            '2' : {
                title : "2、您家宝贝是否愿意自主学习？",
                answer : ["愿意", "不愿意"]
            },
            '3' : {
                title : "3、您家宝贝上几年级了？",
                answer : ["1-2年级", "3-4年级", "5-6年级"]
            },
            '4' : {
                title : "3、您家宝贝哪科需要提高？",
                answer : ["数学", "语文", "英语"]
            }
        };

        answerSheetStart(currentQuestion);

        $(document).on("click", ".js-selectAnswer", function(){
            var $this = $(this);
            var $answer = $this.data("answer");

            if(currentQuestion < 4){
                currentQuestion += 1;

                answerSheetStart(currentQuestion, $answer);
            }else{
                $("#answerSheet").html( template("T:完成结果", {subject : $answer}) );
            }
        });

        function answerSheetStart(count, parentAnswer){
            count = (count ? count : 1);
            $("#answerSheet").html( template("T:开始答题", {item : questionItems[count], parentAnswer : parentAnswer}) );
        }
    });
</script>

<script type="text/html" id="T:开始答题">
    <div class="pa-select">
        <div class="head">还在纠结中？我来帮你选！</div>
        <div class="problem">
            <div class="tip"><%=(item.title)%></div>
            <div class="sel-btn">
                <%for(var i = 0, answer = item.answer; i < answer.length; i++){%>
                    <%if(parentAnswer != "1-2年级" && answer[i] == "语文"){%>
                        <#--选择1-2年级 - 不显示语文-->
                    <%}else{%>
                        <a href="javascript:void(0);" class="js-selectAnswer" data-answer="<%=(answer[i])%>"><%=(answer[i])%></a>
                    <%}%>
                <%}%>
            </div>
        </div>
    </div>
</script>

